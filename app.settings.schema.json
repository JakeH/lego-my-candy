{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "App Settings",
    "description": "Application settings",
    "default": {},
    "examples": [
        {
            "channel": "",
            "identity": {
                "username": "",
                "password": "",
                "clientId": ""
            }
        }
    ],
    "required": [
        "channel",
        "identity"
    ],
    "properties": {
        "channel": {
            "$id": "#/properties/channel",
            "type": "string",
            "title": "Twitch channel",
            "description": "Twitch channel to connect to",
            "default": "",
            "examples": [
                ""
            ]
        },
        "identity": {
            "$id": "#/properties/identity",
            "type": "object",
            "title": "Credentials",
            "description": "Twitch credentials used to connect to Twitch",
            "default": {},
            "examples": [
                {
                    "username": "",
                    "password": "",
                    "clientId": ""
                }
            ],
            "required": [
                "username",
                "password",
                "clientId"
            ],
            "properties": {
                "username": {
                    "$id": "#/properties/identity/properties/username",
                    "type": "string",
                    "title": "Twitch user name",
                    "description": "Twitch user name",
                    "default": "",
                    "examples": [
                        ""
                    ]
                },
                "password": {
                    "$id": "#/properties/identity/properties/password",
                    "type": "string",
                    "title": "Twitch OAuth password",
                    "description": "Twitch OAuth password",
                    "default": "",
                    "examples": [
                        ""
                    ]
                },
                "clientId": {
                    "$id": "#/properties/identity/properties/clientId",
                    "type": "string",
                    "title": "The clientId schema",
                    "description": "Twitch app clientId",
                    "default": "",
                    "examples": [
                        ""
                    ]
                }
            },
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}